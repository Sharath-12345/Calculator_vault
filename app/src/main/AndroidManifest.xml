<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:name="com.sharathkumar.calculatorlock.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalculatorLock"
        tools:targetApi="31">
        <activity
            android:name="com.sharathkumar.calculatorlock.splash"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.sharathkumar.calculatorlock.playingvideo"
            android:exported="false" />
        <activity
            android:name="com.sharathkumar.calculatorlock.zoomvideo"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.zoomphoto"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.videosactivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.photosactivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.menu"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.forgetpassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.changepasswordactivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.secquestion"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sharathkumar.calculatorlock.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id" />
    </application>

</manifest>